{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'TaskFilter'}, 'TaskFilter') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerBoardBundle::appnav.html.twig", { 'taskFilter': true }) }}
{% endblock %}

{% block body %}
    {% if taskFilter.projectIteration %}
        <section class="content-header">
            <h1>
                <a href="{{ path('project_show',{id:taskFilter.projectIteration.project.id}) }}">
                    {{ taskFilter.projectIteration.project.name|title }}
                </a>/
                <a href="{{ path('project_iteration_show',{id:taskFilter.projectIteration.id}) }}">
                    {{ taskFilter.projectIteration.name|title }}
                </a>
            </h1>
        </section>
    {% endif %}
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    {{ '%entity% creation'|trans({'%entity%': 'TaskFilter'}, 'TaskFilter') }}
                </h3>
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                <div class="btn-group record_actions">
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
