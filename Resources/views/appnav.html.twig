<section class="sidebar">
    <div class="app-header">
        <div class="row">
            <div class="col-sm-12">
                <img src="{{ asset('bundles/flowercore/images/icons/Todo-List-100.png') }}"
                     class="img-responsive pull-left" width="40">
                <span>
                    {{ 'tasks'|trans|title }}
                </span>
            </div>
        </div>
    </div>
    <ul class="sidebar-menu">

        <li {% if app_board is defined %}class="active"{% endif %}>
            <a href="{{ path('board') }}">{{ 'boards'|trans({}, 'Board')|title }}</a>
        </li>

        {% if board is defined and board.id is not null %}
            <li {% if app_board_kamban is defined %}class="active"{% endif %}>
                <a href="{{ path('board_task_kanban',{"id":board.id}) }}">{{ 'Kanban view'|trans }}</a>
            </li>
            {% if task is defined and task.id %}
                <li class="active">
                    <a href="{{ path('task_show',{"id":task.id}) }}">{{ 'Task'|trans({},'Task') }}</a>
                </li>
            {% endif %}
        {% endif %}

        <li {% if app_timelog is defined %}class="active"{% endif %}>
            <a href="{{ path('timelog_report_index') }}">
                {{ 'TimeLog' | trans({}, 'TimeLog') }}
            </a>
        </li>

    </ul>
</section>