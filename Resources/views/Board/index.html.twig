{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Board'}, 'Board') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerBoardBundle::appnav.html.twig", { 'app_board': true }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ '%entity% list'|trans({'%entity%': 'Board'}, 'Board') }}</h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <div class="box-tools pull-right">
                    <a class="btn btn-link btn-sm" href={{ path('board_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'Board'}, 'Board') }}
                    </a>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-condensed table-hover ">
                    <thead>
                    <tr>
                        <th scope="col">{{ 'Name' | trans({}, 'Board') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for board in paginator %}
                        <tr>
                            <td>
                                <a title="{{ board.description }}" class=""
                                   href="{{ path('board_task_kanban', {"id": board.id}) }}">
                                    {{ board.name | capitalize }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(paginator) }}
            </div>
            <div class="box-footer">

            </div>

    </section>

{% endblock %}
