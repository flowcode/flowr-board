{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}Board - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ 'Board' | trans({}, 'Board')}}</h1>
        <ol class="breadcrumb">
            <li><a href={{ path('dashboard') }}><i class="fa fa-dashboard"></i> {{"Dashboard" | trans({}, 'Board')}}</a></li>
            <li><a href="{{ path('board') }}"> {{ '%entity% list'|trans({'%entity%': 'Board'}, 'Board') }}</a></li>
            <li class="active" >{{ '%entity%'|trans({'%entity%': 'Board'}, 'Board') }}</li>
        </ol>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>                            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                        <tr>
                            <th scope="row">{{'Id'|trans({}, 'Board')}}</th>
                            <td>{{ board.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Name'|trans({}, 'Board')}}</th>
                            <td>{{ board.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Description'|trans({}, 'Board')}}</th>
                            <td>{{ board.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Status'|trans({}, 'Board')}}</th>
                            <td>{{ board.status }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Startdate'|trans({}, 'Board')}}</th>
                            <td>{{ board.startDate|date('y-m-d H:i') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Duedate'|trans({}, 'Board')}}</th>
                            <td>{{ board.dueDate|date('y-m-d H:i') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Created'|trans({}, 'Board')}}</th>
                            <td>{{ board.created|date('y-m-d H:i') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Updated'|trans({}, 'Board')}}</th>
                            <td>{{ board.updated|date('y-m-d H:i') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">
            {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}

        <div class="btn-group record_actions">

            <a class="btn btn-primary" href="{{ path('board_edit', {id: board.id}) }}">
                <i class="fa fa-edit"></i> {{ 'Edit'|trans({}, 'Board') }}
            </a>
            <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'Board') }}</button>

        </div>

        <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'Board') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'Board') }}, {{ 'this procedure is irreversible'|trans({}, 'Board') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'Board') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Board') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Board') }}</button>
                </div>
            </div>
        </div>
    </div>
</div>
        </div>
    
    </section>

{% endblock %}
