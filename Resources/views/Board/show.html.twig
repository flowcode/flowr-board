{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}Board - {{ parent() }}{% endblock %}


{% block app_menu %}
    {{ include("FlowerBoardBundle::appnav.html.twig", { 'board':board }) }}
{% endblock %}


{% block body %}
    <section class="content-header">
        <h1>{{ board.name|title }}</h1>
    </section>
    <section class="content">
        <div class="box"  id='showBoard'>
            <div class="box-header">
                <h3 class="box-title"></h3>
                <div class="box-tools  pull-right">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Board') }}</button>
                        <input name="modal" type="hidden" value="0">
                        <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                            {{ 'Edit'|trans({}, 'Board') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                        <tr>
                            <th scope="row">{{'Description'|trans({}, 'Board')}}</th>
                            <td>{{ board.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Status'|trans({}, 'Board')}}</th>
                            <td>{{ board.status }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Startdate'|trans({}, 'Board')}}</th>
                            <td>{{ board.startDate|date("smallDate" | trans) }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'due date'|trans({}, 'Board')}}</th>
                            <td>{{ board.dueDate|date("smallDate" | trans) }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Created'|trans({}, 'Board')}}</th>
                            <td>{{ board.created|date("fullDateTime" | trans) }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Updated'|trans({}, 'Board')}}</th>
                            <td>{{ board.updated|date("fullDateTime" | trans) }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">
            </div>
        </div>
        <div class="box" id="editFormBoard" style="display: none;">
            <div class="box-header">
                <div class="box-tools  pull-right">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}
                    <div class="btn-group record_actions">
                        <button class="btn btn-link btn-sm" type="submit"> {{ 'Delete'|trans({}, 'Board') }}</button>

                        <a class="btn btn-link  btn-sm" onclick="showEdit(false)">
                        {{ 'Cancel'|trans({}, 'Account') }}
                        </a>
                    </div>
                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="box-body">

            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn btn-default" type="submit">{{ 'save'|trans | capitalize }}</button>
                </p>
            {{ form_end(edit_form) }}
            </div>
        </div>
        <div id="delete_confirm" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h3>{{ 'Confirm delete'|trans({}, 'Board') }}</h3>
                    </div>
                    <div class="modal-body">
                        <p>{{ 'You are about to delete an item'|trans({}, 'Board') }}, {{ 'this procedure is irreversible'|trans({}, 'Board') }}.</p>
                        <p>{{ 'Do you want to proceed?'|trans({}, 'Board') }}</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger">{{ 'Yes'|trans({}, 'Board') }}</button>
                        <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'Board') }}</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript">
        function showEdit(show){
            if(show){
                $('#showBoard').hide();
                $('#editFormBoard').show();
            }else{
                $('#showBoard').show();
                $('#editFormBoard').hide();
            }
        }
        
    </script>
{% endblock %}