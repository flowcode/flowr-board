{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'TimeLog'}, 'TimeLog') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {% if task is defined %}
        {{ include("FlowerBoardBundle::appnav.html.twig", { 'task':task }) }}
    {% else %}
        {{ include("FlowerBoardBundle::appnav.html.twig", {  }) }}
    {% endif %}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ '%entity% creation'|trans({'%entity%': 'TimeLog'}, 'TimeLog') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('timelog_create')}) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'TimeLog') }}</button>

                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">

                <div class="btn-group record_actions">


                </div>

            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}