                        <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'TimeLog') }}</button>
                    </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                        
        <div class="btn-group record_actions">


        </div>

            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
