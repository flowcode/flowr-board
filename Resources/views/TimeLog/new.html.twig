{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'TimeLog'}, 'TimeLog') }} - {{ parent() }}{% endblock %}

{% block body %}  
    <section class="content">
        {% if task is defined %}
            {{ include("FlowerBoardBundle::appnav.html.twig", { 'board': task.board,'task':task }) }} 
        {% else %}
            {{ include("FlowerBoardBundle::appnav.html.twig", {  }) }} 
        {% endif %}
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ '%entity% creation'|trans({'%entity%': 'TimeLog'}, 'TimeLog') }}</h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('timelog_create')}) }}
                    {{ form_widget(form) }}
                    <p>
                        <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'TimeLog') }}</button>
                    </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                        
        <div class="btn-group record_actions">


        </div>

            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}