{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}TaskStatus - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        {% include 'FlowerCoreBundle:Default:admin_nav.html.twig' %}
        <h1>
            <a href="{{ path('admin_dash') }}"> {{ 'Settings'|trans}}</a>
            /
            <a href="{{ path('taskstatus') }}"> {{ '%entity% list'|trans({'%entity%': 'TaskStatus'}, 'TaskStatus') }}</a>/
            {{ 'TaskStatus' | trans({}, 'TaskStatus')}}</h1>
        
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <div class="box-tools">
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form) }}

                    <div class="btn-group record_actions">

                        <a class="btn btn-link  btn-sm" href="{{ path('taskstatus_edit', {id: taskstatus.id}) }}">
                            {{ 'Edit'|trans({}, 'TaskStatus') }}
                        </a>
                        <button class="btn btn-link  btn-sm" type="submit">{{ 'Delete'|trans({}, 'TaskStatus') }}</button>

                    </div>

                    <input name="modal" type="hidden" value="0">
                    {{ form_end(delete_form) }}

                    <div id="delete_confirm" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h3>{{ 'Confirm delete'|trans({}, 'TaskStatus') }}</h3>
                                </div>
                                <div class="modal-body">
                                    <p>{{ 'You are about to delete an item'|trans({}, 'TaskStatus') }}, {{ 'this procedure is irreversible'|trans({}, 'TaskStatus') }}.</p>
                                    <p>{{ 'Do you want to proceed?'|trans({}, 'TaskStatus') }}</p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'TaskStatus') }}</button>
                                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'TaskStatus') }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover record_properties">
                    <tbody>
                        <tr>
                            <th scope="row">{{'Id'|trans({}, 'TaskStatus')}}</th>
                            <td>{{ taskstatus.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Name'|trans({}, 'TaskStatus')}}</th>
                            <td>{{ taskstatus.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{'Description'|trans({}, 'TaskStatus')}}</th>
                            <td>{{ taskstatus.description }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-footer">

</div>
        </div>
    
    </section>

{% endblock %}
