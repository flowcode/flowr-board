{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'Task'}, 'Task') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerBoardBundle::appnav.html.twig", { 'board': board }) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ '%entity% creation'|trans({'%entity%': 'Task'}, 'Task') }}
        </h1>
    </section>
    <section class="content">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('task_create', {"id": board.id})}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="box-footer">

                <div class="btn-group record_actions">


                </div>

            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
